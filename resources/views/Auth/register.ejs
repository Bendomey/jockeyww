<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">

                <div class="login-form">
                    <div class="login-logo">
                        <a href="/">
                            <img class="align-content" src="/images/logo.png" alt="">
                        </a>
                    </div>
                    <%- include('../partials/messages')%>
                        <form method="POST">
                            <input type="hidden" name="isAdmin" value="1" required>
                            <div class="form-group">
                                <label>User Name</label>
                                <input type="text" name="name" class="form-control" required autofocus placeholder="User Name">
                            </div>
                            <div class="form-group">
                                <label>Contact</label>
                                <input type="tel" class="form-control phone contact" required>
                                <small class="form-text text-danger contactError" hidden>Invalid contact</small>
                            </div>
                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" name="email" class="form-control" required placeholder="Email">
                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control password" required placeholder="Password">
                                <small class="form-text text-danger password_error" hidden>Passwords should be more than 6 characters</small>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" name="password2" class="form-control confirm_password" required placeholder="Confirm Password">
                                <small class="form-text text-danger confirm_password_error" hidden>Passwords are not equal</small>
                            </div>
                            <div class="checkbox">
                                <label>
                                <input type="checkbox" class="agreeTerms"> Agree to the terms and policy
                            </label>
                            </div>
                            <button type="submit" disabled class="btn btn-info btn-flat m-b-30 m-t-30 registerBtn">Register</button>
                            <div class="register-link m-t-15 text-center">
                                <p>Already have account ? <a href="/users/login"> Sign in</a></p>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.matchHeight.min.js"></script>
    <script src="/assets/js/main.js"></script>
    <script src="/build/js/intlTelInput.min.js"></script>
    <script src="/build/js/intlTelInput-jquery.min.js"></script>
    <script src="/js/auth.js"></script>
</body>

</html>